@model ProductUpdateVM
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <h1>Edit</h1>
    <div style="width:200px;" class="d-flex align-items-center">
        @foreach (var item in Model.Images)
        {
            <img class="img-fluid" src="~/img/@item.Image" />
            <i class="fa-solid fa-trash" style="color: #c60101;"></i>
        }
    </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Choose images</label>
            <input class="form-control" id="formFile" asp-for="Photos">
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add name</label>
            <input class="form-control" id="formFile" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add description</label>
            <textarea class="form-control" id="formFile" asp-for="Description" rows="6"></textarea>
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add price</label>
            <input class="form-control" type="text" id="formFile" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price">@ViewBag.error</span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add category</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button asp-action="Index" class="btn btn-dark">Cancel</button>
    </form>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-w my-5" asp-action="Index">
            Go to list
        </a>
    </div>
</div>


