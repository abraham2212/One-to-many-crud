@model Product
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1>Create</h1>
    <div style="width:200px;" class="d-flex align-items-center">
        @foreach (var item in Model.Images)
        {
            <img class="img-fluid" src="~/img/@item.Image"/>
        }
    </div>
    <div class="form-group mt-5">
        <label for="formFile" class="form-label">Name</label>
        <input class="form-control bg-dark" disabled id="formFile" asp-for="Name">
    </div>
    <div class="form-group mt-5">
        <label for="formFile" class="form-label">Description</label>
        <textarea class="form-control bg-dark" disabled id="formFile" asp-for="Description" rows="6"></textarea>
    </div>
    <div class="form-group mt-5">
        <label for="formFile" class="form-label">Price</label>
        <input class="form-control bg-dark" disabled type="text" id="formFile" asp-for="Price" />
    </div>
    <div class="form-group mt-5">
        <label for="formFile" class="form-label">Category</label>
        <input class="form-control bg-dark" disabled id="formFile" asp-for="Category.Name" />
    </div>
    <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-danger mr-2">Delete</button>
        <button asp-action="Index" class="btn btn-dark">Cancel</button>
    </form>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-w my-5" asp-action="Index">
            Go to list
        </a>
    </div>
</div>
